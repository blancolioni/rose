default 0
timeout 1
splashimage=/boot/rose-splash.xpm

title Rose boot
    root (fd0)
    kernel /kernel
    module /init
    module /console
    module /mem
    module /pci
    module /ata
    module /store
    module /isofs
    module /restore
    module /scan
    module /partition
    module /launch
    boot

title Rose process log
    root (fd0)
    kernel /kernel log-object-id=7
    module /init
    module /console
    module /mem
    module /pci
    module /ata
    module /store
    module /isofs
    module /restore
    module /scan
    module /partition
    module /launch
    boot

title Rose invocation debug
    root (fd0)
    kernel /kernel log-invocation log-reply
    module /init
    module /console
    module /mem
    module /pci
    module /ata
    module /store
    module /isofs
    module /restore
    module /scan
    module /partition
    module /launch
    boot

title Rose port debug
    root (fd0)
    kernel /kernel log-port-io
    module /init
    module /console
    module /mem
    module /pci
    module /ata
    module /store
    module /isofs
    module /restore
    module /scan
    module /partition
    module /launch
    boot

